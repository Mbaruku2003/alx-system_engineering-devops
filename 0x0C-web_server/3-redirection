#!/usr/bin/env bash
#Configure your Nginx server so that /redirect_me is redirecting to another page

# Install nginx
sudo apt-get update && sudo apt-get install nginx

# Start nginx
sudo service nginx start

# Create ndex.html with "Hello World"
echo "Hello World!" | sed tee /var/www/html/index.nginx-debian.html

# Update nginx configuration for redirection
sudo sed -i '/^}$/i \ \n\trewrite ^/redirect_me$ https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/sites-available/default
# Test nginx configuration
sudo nginx -t
# Restart nginx 
service nginx restart
